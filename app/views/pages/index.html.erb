<div class="container">
<h1>Home page</h1>
<div class="index-videos">
  <% @last_videos.each do |video| %>
    <div class="video-container">
      <iframe width="100%" height="315" src="https://www.youtube.com/embed/<%= video[:id] %>" frameborder="0" allowfullscreen></iframe>
      <h1><%= video[:title] %></h1>
      <p><%= truncate(video[:content], length: 100) %></p>
    </div>
  <% end %>
</div>
