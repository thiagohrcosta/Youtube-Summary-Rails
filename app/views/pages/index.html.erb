<div class="container">
  <%= render "shared/navbar" %>
  <div class="home-videos-container">
    <% @last_videos.each do |video| %>
      <div class="video-container">
        <iframe width="100%" height="315" src="https://www.youtube.com/embed/<%= video[:id] %>" frameborder="0" allowfullscreen></iframe>
        <h1><%= video[:title] %></h1>
        <p><%= truncate(video[:content], length: 100) %></p>
        <div>
          <%= link_to "SEE MORE", video_content_path(video[:video_id]) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
